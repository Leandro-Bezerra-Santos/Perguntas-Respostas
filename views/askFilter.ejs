<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
<body>
    <%- include('partials/nav.ejs') %>
    <div class="container">
        <div class="card mt-5">
            <div class="card-body">
                <h3><%= ask.title %></h3>
            </div>
            <div class="card-footer">
                <p><%= ask.description %></p>
            </div>

        </div>
        <form action="">
            <h3>Responda</h3>

            <label for="body" class="mt-2">Resposta</label>
            <textarea name="body" class="form-control " id="" placeholder="Responda a pergunta"></textarea>
            <input type="hidden" name="ask" value="<%= ask.id %>">
            <button type="submit" class="btn btn-dark mt-3">Responder</button>
        </form>
    </div>

</body>
